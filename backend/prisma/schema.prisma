generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  super_admin
  project_director
  project_manager
  pm
  lead
  viewer
}

enum ProjectRole {
  director
  manager
  member
  viewer
}

enum RequirementStatus {
  draft
  in_review
  approved
  planned
  done
}

enum RequirementPriority {
  low
  medium
  high
}

enum ReviewDecision {
  approved
  rejected
}

enum CostType {
  labor
  outsource
  cloud
}

enum TaskStatus {
  todo
  in_progress
  blocked
  done
}

enum NotificationLevel {
  info
  warning
  error
}

enum RiskRuleType {
  deadline_progress
  blocked
  overdue
}

enum DependencyType {
  FS
  SS
  FF
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  username String?  @unique
  password String?
  role     UserRole
  projects Project[] @relation("ProjectOwner")
  memberships ProjectMembership[]
  worklogs Worklog[]
}

model Project {
  id           Int           @id @default(autoincrement())
  name         String
  ownerId      Int
  budget       Float
  startDate    String?
  endDate      String?
  feishuChatIds String?
  owner        User          @relation("ProjectOwner", fields: [ownerId], references: [id])
  memberships  ProjectMembership[]
  requirements Requirement[]
  costs        CostEntry[]
  milestones   Milestone[]
  tasks        Task[]
  worklogs     Worklog[]
  notifications Notification[]
  prdDocuments PrdDocument[]
}

model ProjectMembership {
  id        Int         @id @default(autoincrement())
  userId    Int
  projectId Int
  role      ProjectRole @default(member)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  user      User        @relation(fields: [userId], references: [id])
  project   Project     @relation(fields: [projectId], references: [id])

  @@unique([userId, projectId])
  @@index([projectId])
}

model Requirement {
  id          Int                 @id @default(autoincrement())
  projectId   Int
  title       String
  description String
  priority    RequirementPriority
  status      RequirementStatus   @default(draft)
  version     String?
  changeCount Int                 @default(0)
  createdAt   DateTime            @default(now())
  project     Project             @relation(fields: [projectId], references: [id])
  reviews     RequirementReview[]
  changes     RequirementChange[]
}

model RequirementReview {
  id            Int            @id @default(autoincrement())
  requirementId Int
  reviewer      String
  decision      ReviewDecision
  comment       String?
  createdAt     DateTime       @default(now())
  requirement   Requirement    @relation(fields: [requirementId], references: [id])
}

model RequirementChange {
  id            Int         @id @default(autoincrement())
  requirementId Int
  changedBy     String?
  reason        String?
  before        Json?
  after         Json?
  version       String?
  createdAt     DateTime    @default(now())
  requirement   Requirement @relation(fields: [requirementId], references: [id])
}

model PrdDocument {
  id        Int          @id @default(autoincrement())
  projectId Int
  title     String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  project   Project      @relation(fields: [projectId], references: [id])
  versions  PrdVersion[]

  @@index([projectId])
}

model PrdVersion {
  id          Int      @id @default(autoincrement())
  documentId  Int
  versionLabel String?
  fileName    String
  mimeType    String?
  fileSize    Int?
  storagePath String
  contentText String   @db.Text
  contentHash String
  createdAt   DateTime @default(now())
  document    PrdDocument @relation(fields: [documentId], references: [id])

  @@index([documentId])
  @@index([contentHash])
}

model CostEntry {
  id         Int      @id @default(autoincrement())
  projectId  Int
  type       CostType
  amount     Float
  occurredOn String
  note       String?
  project    Project  @relation(fields: [projectId], references: [id])
}

model Milestone {
  id         Int      @id @default(autoincrement())
  projectId  Int
  name       String
  plannedDate String
  actualDate String?
  project    Project  @relation(fields: [projectId], references: [id])
}

model Task {
  id           Int        @id @default(autoincrement())
  projectId    Int
  title        String
  assignee     String
  status       TaskStatus
  plannedStart String
  plannedEnd   String
  project      Project    @relation(fields: [projectId], references: [id])
}

model FeishuDependency {
  id                 Int            @id @default(autoincrement())
  projectName        String
  taskRecordId       String
  taskId             String?
  dependsOnRecordId  String
  dependsOnTaskId    String?
  type               DependencyType @default(FS)
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt

  @@unique([taskRecordId, dependsOnRecordId, type])
}

model Worklog {
  id         Int      @id @default(autoincrement())
  projectId  Int
  userId     Int?
  assigneeName String?
  taskTitle  String?
  weekStart  String?
  weekEnd    String?
  totalDays  Float?
  hours      Float
  hourlyRate Float
  workedOn   String
  createdAt  DateTime @default(now())
  project    Project  @relation(fields: [projectId], references: [id])
  user       User?    @relation(fields: [userId], references: [id])
}

model PmAssistantLog {
  id          Int      @id @default(autoincrement())
  jobId       String
  triggeredBy String
  status      String
  summary     String
  rawSummary  String?
  aiSummary   String?
  error       String?
  createdAt   DateTime @default(now())
}

model PmAssistantJobConfig {
  id        Int      @id @default(autoincrement())
  jobId     String   @unique
  enabled   Boolean  @default(true)
  updatedAt DateTime @updatedAt
}

model Notification {
  id        Int               @id @default(autoincrement())
  projectId Int?
  level     NotificationLevel @default(info)
  title     String
  message   String
  readAt    DateTime?
  createdAt DateTime          @default(now())
  project   Project?          @relation(fields: [projectId], references: [id])
}

model RiskRule {
  id                Int        @id @default(autoincrement())
  key               String     @unique
  type              RiskRuleType @default(deadline_progress)
  name              String
  enabled           Boolean    @default(true)
  thresholdDays     Int
  progressThreshold Int
  blockedValue      String?    @default("æ˜¯")
  includeMilestones Boolean    @default(false)
  autoNotify        Boolean    @default(true)
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  alerts            RiskAlert[]
  logs              RiskRuleLog[]
}

model RiskRuleLog {
  id        Int      @id @default(autoincrement())
  ruleId    Int
  action    String
  note      String?
  createdAt DateTime @default(now())
  rule      RiskRule @relation(fields: [ruleId], references: [id])
}

model RiskAlert {
  id         Int      @id @default(autoincrement())
  ruleId     Int
  recordId   String
  taskId     String?
  taskName   String?
  project    String?
  endDate    String?
  progress   Float?
  daysLeft   Int?
  notifiedAt DateTime @default(now())
  rule       RiskRule @relation(fields: [ruleId], references: [id])

  @@unique([ruleId, recordId])
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  userId     Int?
  userName   String?
  userRole   String?
  method     String
  path       String
  projectId  Int?
  requestBody Json?
  createdAt  DateTime @default(now())
}

model FeishuUser {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  openId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
