generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  pm
  lead
  viewer
}

enum RequirementStatus {
  draft
  in_review
  approved
  planned
  done
}

enum RequirementPriority {
  low
  medium
  high
}

enum ReviewDecision {
  approved
  rejected
}

enum CostType {
  labor
  outsource
  cloud
}

enum TaskStatus {
  todo
  in_progress
  blocked
  done
}

enum NotificationLevel {
  info
  warning
  error
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  username String?  @unique
  password String?
  role     UserRole
  projects Project[] @relation("ProjectOwner")
  worklogs Worklog[]
}

model Project {
  id           Int           @id @default(autoincrement())
  name         String
  ownerId      Int
  budget       Float
  startDate    String?
  endDate      String?
  owner        User          @relation("ProjectOwner", fields: [ownerId], references: [id])
  requirements Requirement[]
  costs        CostEntry[]
  milestones   Milestone[]
  tasks        Task[]
  worklogs     Worklog[]
  notifications Notification[]
}

model Requirement {
  id          Int                 @id @default(autoincrement())
  projectId   Int
  title       String
  description String
  priority    RequirementPriority
  status      RequirementStatus   @default(draft)
  version     String?
  changeCount Int                 @default(0)
  createdAt   DateTime            @default(now())
  project     Project             @relation(fields: [projectId], references: [id])
  reviews     RequirementReview[]
}

model RequirementReview {
  id            Int            @id @default(autoincrement())
  requirementId Int
  reviewer      String
  decision      ReviewDecision
  comment       String?
  createdAt     DateTime       @default(now())
  requirement   Requirement    @relation(fields: [requirementId], references: [id])
}

model CostEntry {
  id         Int      @id @default(autoincrement())
  projectId  Int
  type       CostType
  amount     Float
  occurredOn String
  note       String?
  project    Project  @relation(fields: [projectId], references: [id])
}

model Milestone {
  id         Int      @id @default(autoincrement())
  projectId  Int
  name       String
  plannedDate String
  actualDate String?
  project    Project  @relation(fields: [projectId], references: [id])
}

model Task {
  id           Int        @id @default(autoincrement())
  projectId    Int
  title        String
  assignee     String
  status       TaskStatus
  plannedStart String
  plannedEnd   String
  project      Project    @relation(fields: [projectId], references: [id])
}

model Worklog {
  id         Int      @id @default(autoincrement())
  projectId  Int
  userId     Int?
  taskTitle  String?
  hours      Float
  hourlyRate Float
  workedOn   String
  createdAt  DateTime @default(now())
  project    Project  @relation(fields: [projectId], references: [id])
  user       User?    @relation(fields: [userId], references: [id])
}

model Notification {
  id        Int               @id @default(autoincrement())
  projectId Int?
  level     NotificationLevel @default(info)
  title     String
  message   String
  readAt    DateTime?
  createdAt DateTime          @default(now())
  project   Project?          @relation(fields: [projectId], references: [id])
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  userId     Int?
  userName   String?
  userRole   String?
  method     String
  path       String
  projectId  Int?
  requestBody Json?
  createdAt  DateTime @default(now())
}
